{
    "name": "nikolaposa/centerr",
    "description": "Comprehensive and extensible error handling system for PHP",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "exceptions",
        "error handling",
        "error handler"
    ],
    "authors": [
        {
            "name": "Nikola Po≈°a",
            "email": "posa.nikola@gmail.com",
            "homepage": "http://www.nikolaposa.in.rs"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "psr/log": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "CentErr\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CentErr\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "psr/log": "^1.0 to use log processor"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "cs-fix": "php-cs-fixer fix --config=.php_cs",
        "cs-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
